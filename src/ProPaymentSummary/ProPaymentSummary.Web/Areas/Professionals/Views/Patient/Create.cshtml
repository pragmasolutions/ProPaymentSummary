@using ProPaymentSummary.Web.Helpers
@model ProPaymentSummary.Service.Data.PatientData

<page-title ng-if="layoutOptions.pageTitles" title="Alta Paciente" description="Alta de pacientes del profesional."></page-title>

<div class="row" ng-controller="CreatePatientCtrl">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Datos Generales</h3>
            </div>
            <div class="panel-body">
                <form role="form" class="form-horizontal" ng-submit="submit()">
                    @Html.ValidationSummary(true)
                    @Html.AngularEditorForModel("patient")
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
